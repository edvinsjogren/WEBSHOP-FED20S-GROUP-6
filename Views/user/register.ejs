<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head.ejs") %>
</head>
<body>
  <div class="pageContainer">
    <header>
      <%- include("./layout/altNavbar.ejs") %>
    </header>

    <main>
      <h1>Register an account now!</h1>

      <!--Joi validation error messages-->
        <% for(let i=0; i<error.length; i++) { %>
          <div class="messages">
        <p ><%=error[i].message %></p>
          </div>
        <% } %> 

      <div class="formContainer">

        <!--duplicate email prohibitor-->
        <div class="messages">
        <%- include("./helpers/errors.ejs") %>
        </div>

        <form action="/register" method="POST" class="submitUserInformation">   
          <label for="username" class="label">Username:</label>
          <input type="text" name="username" class="inputBox"/>
          <label for="email" class="label">Email:</label>
          <input type="text" name="email" class="inputBox"/> 
          <label for="password" class="label">Password:</label>
          <input type="password" name="password" class="inputBox"/>
          <button type="submit" class="smallButton buttonMargin">Create new account!</button>
        </form>
      </div>
    </main>
    <footer><%- include("./layout/footer.ejs") %></footer>
  </div>
  <%- include("./partials/scripts.ejs") %>
</body>
</html>